@model Promise.ProductManagementSystem.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<h1 class="display-4">Product Details</h1>
<p>Welcome to the Product Details page!</p>
<p>Here you can view the details of a specific product.</p>
<br />

<div>
    <h4>Movie Info</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.DateAdded.ToString("g")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
    </form> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
