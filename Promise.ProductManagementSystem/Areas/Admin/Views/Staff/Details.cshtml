@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Staff Member Details";
}
<h1 class="display-4">Staff Member Details</h1>
<p>Welcome to the Staff Member Details page!</p>
<p>Here you can view the details of a specific staff member.</p>
<br />
<div>
    <h4>Staff Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Email Confirmed</dt>
        <dd class="col-sm-10">
            @if (Model.EmailConfirmed)
            {
                <span class="badge bg-success">Confirmed</span>
            }
            else
            {
                <span class="badge bg-secondary">Not Confirmed</span>
            }
        </dd>
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
    </dl>
</div>

<div>
    <a asp-area="Admin" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-area="Admin" asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-warning">Change Password</a> |
    <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this staff member?')">Delete</button>
    </form> |
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>